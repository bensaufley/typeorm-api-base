{
  "name": "typeorm-api-base",
  "version": "0.1.0",
  "description": "A base from which to build a full-fledged TypeORM- and Apollo/GraphQL-based API server.",
  "repository": "https://github.com/bensaufley/typeorm-api-base.git",
  "author": "Ben Saufley <contact@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "~10.13.0"
  },
  "dependencies": {
    "@types/uuid": "^3.4.4",
    "apollo-server-koa": "^2.1.0",
    "chai-passport-strategy": "^1.0.1",
    "class-validator": "^0.9.1",
    "graphql": "^14.0.2",
    "graphql-playground-middleware-koa": "^1.6.6",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.3",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-passport": "^4.1.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "nodemon": "^1.18.5",
    "npm-run-all": "^4.1.3",
    "passport-local": "^1.0.0",
    "pg": "^7.6.0",
    "pg-connection-string": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "typeorm": "^0.2.8",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node ./replace-paths.js",
    "db:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "db:test:prepare": "NODE_ENV=test ts-node ./node_modules/.bin/typeorm schema:drop && NODE_ENV=test ts-node ./node_modules/.bin/typeorm migration:run",
    "dev": "nodemon",
    "lint": "npm-run-all -cp --aggregate-output lint:ts lint:types",
    "lint:ts": "tslint -p tsconfig.json -c tslint.json -t stylish",
    "lint:types": "tsc --noEmit",
    "start": "node ./.build/index.js",
    "test": "mocha",
    "test:cov": "nyc yarn test"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/graphql": "^14.0.3",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.0.32",
    "@types/koa-session": "^5.7.4",
    "@types/koa-static": "^4.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.2",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.11",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.2.0",
    "chai-change": "^2.1.2",
    "database-cleaner": "^1.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-react": "^3.6.0",
    "uuid": "^3.3.2"
  }
}
